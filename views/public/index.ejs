    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        $(document).ready(function () {
            // Initialize AOS
            AOS.init({
                duration: 1000,
                once: true
            });

            // Smooth scroll effect
            $('a[href^="#"]').on('click', function (e) {
                e.preventDefault();
                var target = $(this.hash);
                $('html, body').animate({
                    scrollTop: target.offset().top - 70
                }, 800);
            });

            // Animate skill bars on scroll
            function animateSkillBars() {
                $('.skill-card').each(function () {
                    var position = $(this).offset().top;
                    var scroll = $(window).scrollTop();
                    var windowHeight = $(window).height();
                    if (scroll > position - windowHeight + 100) {
                        $(this).find('.progress-bar').each(function () {
                            var width = $(this).attr('style').match(/\d+/)[0];
                            $(this).css('width', '0%').animate({
                                width: width + '%'
                            }, 1500);
                        });
                    }
                });
            }

            // Service cards hover effect
            $('.service-card').hover(
                function () {
                    $(this).find('i').addClass('animate__animated animate__rubberBand');
                },
                function () {
                    $(this).find('i').removeClass('animate__animated animate__rubberBand');
                }
            );

            // Project cards interaction
            $('.project-card').hover(
                function () {
                    $(this).find('.tech-stack').addClass('animate__animated animate__fadeIn');
                },
                function () {
                    $(this).find('.tech-stack').removeClass('animate__animated animate__fadeIn');
                }
            );

            // Navbar scroll effect
            var navbar = $('.navbar');
            $(window).scroll(function () {
                if ($(window).scrollTop() > 50) {
                    navbar.addClass('navbar-scrolled').addClass('animate__animated animate__fadeInDown');
                } else {
                    navbar.removeClass('navbar-scrolled').removeClass('animate__animated animate__fadeInDown');
                }
            });

            // Initialize tooltips
            $('[data-toggle="tooltip"]').tooltip();

            // Call animations on scroll
            $(window).on('scroll', function () {
                animateSkillBars();
            });

            // Initial animation call
            animateSkillBars();
        });
    </script>